{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "projectName",
            "type": "promptString",
            "description": "输入 Bazel 项目名称",
            "default": "highly-toxic-water"
        }
    ],
    "tasks": [
        {
            "label": "Bazel Build",
            "type": "shell",
            "command": "bazelisk",
            "args": ["build", "//subprojects/${input:projectName}:${input:projectName}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Bazel Run Server",
            "type": "shell",
            "command": "bazelisk",
            "args": ["run", "//subprojects/${input:projectName}:server"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Bazel Upload Modrinth",
            "type": "shell",
            "command": "bazelisk",
            "args": ["run", "//subprojects/${input:projectName}:upload_modrinth"],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
